{
  "manifest_version": 3,
  "name": "NeuroPilot Pro",
  "version": "1.0",
  "description": "Advanced voice-driven browser assistant with OpenAI integration and optional local PC control.",
  "permissions": ["tabs","activeTab","scripting","storage","notifications","contextMenus"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "NeuroPilot Pro"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["<all_urls>"]
}
